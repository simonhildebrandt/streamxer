<!DOCTYPE html>
<html>
<head>
  <title>Streamxer</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="auth">
    <% if logged_in? %>
      <%= current_user.uid %>
      <%= link_to 'logout', logout_path %>
    <% else %>
      <%= link_to('log in', '/auth/tumblr') %>
    <% end %>
  </div>

  <%= yield %>

</body>
</html>
